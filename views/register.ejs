<style>
    /* Add your CSS styles here */
    .hidden {
        display: none;
    }
</style>

<body>
    <div class="form-wrapper">
        <main class="form-side">
            <a href="#" title="Logo">
            </a>
            <form class="my-form"  method="post" action="/users/register">
                <div class="form-welcome-row">
                    <h1>Welcome back üëè</h1>
                    <h2>Rest-API HeavyCraft</h2>
                </div>
                <div class="divider">
                    <div class="divider-line"></div>
					
					<img src="https://i.ibb.co/9bSHN1j/d4f8ce09-e777-445c-bb02-0addf9892ed2-removebg-preview.png" alt="HeavyCraft" width="50">
                    <div class="divider-line"></div>
                </div>
                <div class="text-field">
                    <label>Email</label>
                    <input type="email" id="email" name="email" autocomplete="off" placeholder="you@example.com"
                        required>
                    <div class="error-message">Email in incorrect format</div>
                </div>
				<div class="text-field">
                    <label>Username</label>
                    <input type="text" id="username" name="username" placeholder="HeavyCraft"  value=""
                        required>
                </div>
				<div class="text-field">
					<label>Password</label>
					<input type="password" name="password" placeholder="Your password" title="Minimum 6 characters at least 1 Alphabet and 1 Number" required>
				</div>
			
				<div class="text-field">
					<label>Confirm Password</label>
					<input type="password" name="confirmPassword" placeholder="Confirm password" title="Minimum 6 characters at least 1 Alphabet and 1 Number" required">
				</div>
                <button type="submit" class="my-form__button">
                   Register
                </button>
                <div class="my-form__actions">
                    <div class="my-form__row">
                        <span>Sudah mempunyai akun?</span>
                        <a href="/users/login" title="Reset Password">
							Klik Disini
                        </a>
                    </div>
                </div>
            </form>
        </main>
		<aside class="info-side">
			<div class="blockquote-wrapper">
				<blockquote id="quote"></blockquote>
				<div class="author">
					<img img id="waifuImage" alt="Waifu Image">
					<span class="author-name" id="character"></span>
				</div>
			</div>
            </div>
        </aside>
    </div>
</body>
<script>
    // JavaScript to handle form submission and show/hide elements
    document.getElementById('registrationForm').addEventListener('submit', function (event) {
        event.preventDefault(); // Prevent the form from actually submitting
        // Hide the form
        document.getElementById('formWrapper').classList.add('hidden');
        // Show the success page
        document.getElementById('successPage').classList.remove('hidden');
    });
</script>

